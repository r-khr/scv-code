{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "nohup bash -c 'shopt -s nullglob; files=(~/.claude/sounds/confirmed/*.{wav,mp3}); [ ${#files[@]} -gt 0 ] && {{PLAYER}} \"${files[$((RANDOM % ${#files[@]}))]}\"' &>/dev/null &"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "read_file",
        "hooks": [
          {
            "type": "command",
            "command": "nohup {{PLAYER}} ~/.claude/sounds/mining.wav &>/dev/null &"
          }
        ]
      },
      {
        "matcher": "write_file",
        "hooks": [
          {
            "type": "command",
            "command": "nohup bash -c 'shopt -s nullglob; files=(~/.claude/sounds/work/*.{wav,mp3}); [ ${#files[@]} -gt 0 ] && {{PLAYER}} \"${files[$((RANDOM % ${#files[@]}))]}\"' &>/dev/null &"
          }
        ]
      },
      {
        "matcher": "execute_bash",
        "hooks": [
          {
            "type": "command",
            "command": "nohup bash -c 'shopt -s nullglob; if [ \"$CLAUDE_TOOL_ERROR\" = \"true\" ]; then files=(~/.claude/sounds/error/*.{wav,mp3}); else files=(~/.claude/sounds/work/*.{wav,mp3}); fi; [ ${#files[@]} -gt 0 ] && {{PLAYER}} \"${files[$((RANDOM % ${#files[@]}))]}\"' &>/dev/null &"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "nohup bash -c 'shopt -s nullglob; files=(~/.claude/sounds/question/*.{wav,mp3}); [ ${#files[@]} -gt 0 ] && {{PLAYER}} \"${files[$((RANDOM % ${#files[@]}))]}\"' &>/dev/null &"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "nohup bash -c 'shopt -s nullglob; files=(~/.claude/sounds/done/*.{wav,mp3}); [ ${#files[@]} -gt 0 ] && {{PLAYER}} \"${files[$((RANDOM % ${#files[@]}))]}\"' &>/dev/null &"
          }
        ]
      }
    ]
  }
}
